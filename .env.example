# Arabic Learning Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database URL (For development/migration tools only)
DATABASE_URL=your_database_connection_string_here

# Development Settings
NODE_ENV=development
VITE_APP_VERSION=1.0.0

# Security Settings (Optional)
VITE_ENABLE_DEBUG=false
VITE_MAX_UPLOAD_SIZE=10485760

# Video SDK Settings (Optional)
VITE_MAX_PARTICIPANTS=100
VITE_ENABLE_RECORDING=true
VITE_ENABLE_AI_FEATURES=false

# Payment Gateway (Optional - for future use)
VITE_PAYMENT_GATEWAY_URL=
VITE_PAYMENT_GATEWAY_KEY=

# Instructions:
# 1. Never commit this file with real values
# 2. Always use strong, unique keys
# 3. Rotate keys regularly in production
# 4. Use environment-specific values for different deployments